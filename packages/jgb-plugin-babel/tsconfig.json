{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib/",
    "baseUrl": "src",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true
  },
  "typeRoots": [
    "./typings",
    "node_modules/@types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}
